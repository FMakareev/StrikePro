div(id="header__slider" class="carousel slide" data-ride="carousel")
    ol(class="carousel-indicators")
        li(data-target="#header__slider" data-slide-to="0" class="active")
        li(data-target="#header__slider" data-slide-to="1")
        li(data-target="#header__slider" data-slide-to="2")
    div(class="carousel-inner" role="listbox")
        div(class="item active" style="height: 730px; overflow: hidden")
            img(src="/image/Slider-img.jpg" alt=".")
