        div(class="item" style="height: 730px; overflow: hidden")
            img(src="/image/Slider-img.jpg" alt=".")
            div(class="carousel-caption")
        div(class="item" style="height: 730px; overflow: hidden")
            img(src="/image/Slider-img.jpg" alt=".")
            div(class="carousel-caption")
