                    li.variation__item
                        img(src="", alt="" )
                    li.variation__item
                        img(src="", alt="" )
                    li.variation__item
                        img(src="", alt="" )
                    li.variation__item
                        img(src="", alt="" )
        .colorTable__gallery--bottom
            .colorTable__gallery--slider
                ul.slider__wrap

            .colorTable__gallery--control
                button.left
                    svg
                        use.caret__arrow(xlink:href="#svg_arrow")
                button.right
                    svg
                        use.caret__arrow(xlink:href="#svg_arrow")



