btn#glide__unmount
    | unmount glideslider
.glide(style="width: auto")
    .glide__track(data-glide-el="track")
        ul.glide__slides

    .glide__arrows(data-glide-el="controls[nav]")
        btn.glide__arrow.glide__arrow--left(data-glide-dir="<")
            | prev
        btn.glide__arrow.glide__arrow--right(data-glide-dir=">")
            | next

.colorTable__gallery--wrapper.js__popup
    .colorTable__gallery--popup.js__noPropagation
        button.close__popup.js__closePopup &#215;
        .colorTable__gallery--top
            .colorTable__gallery--content
                .colorTable__gallery--characteristics
                    ul.characteristics__list
                        li.characteristics__item
                            span.characteristics__title Модель:
                            span.characteristics__desc Aquamax Shad 50
                .colorTable__gallery--img
                    img(src="", alt="")
                .colorTable__gallery--title
